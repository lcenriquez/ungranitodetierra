---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dona">
  <div class="container mx-auto px-4 py-16 hidden">
    <div class="max-w-2xl mx-auto bg-white p-10 rounded-lg shadow-soft">
      <h1 class="text-3xl font-light text-brand-green mb-12 text-center">Apoya nuestra causa</h1>

      <div class="space-y-12">
        <div class="hidden">
          <div class="flex items-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-brown mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
            <h2 class="text-2xl font-light text-brand-brown">Datos Bancarios</h2>
          </div>
          <div class="bg-soft-cream p-8 rounded-lg">
            <p class="mb-4 text-brand-brown"><strong>Banco:</strong> Banco Ejemplo</p>
            <p class="mb-4 text-brand-brown"><strong>Titular:</strong> Un Granito de Tierra, A.C.</p>
            <p class="mb-4 text-brand-brown"><strong>Cuenta:</strong> 1234 5678 9012 3456</p>
            <p class="text-brand-brown"><strong>CLABE:</strong> 123456789012345678</p>
          </div>
        </div>

        <div class="text-center">
          <div class="flex items-center justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-brown mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h2 class="text-2xl font-light text-brand-brown">Dona con PayPal</h2>
          </div>
          <a 
            href="https://www.paypal.com/donate/?hosted_button_id=8V39MKSQZQ3N4" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center bg-brand-green text-white px-8 py-4 rounded-lg hover:bg-light-sage transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Donar ahora
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>